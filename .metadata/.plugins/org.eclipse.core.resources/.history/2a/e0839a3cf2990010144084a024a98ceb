package loops;

public class Hollow_Triangle {
																									
}
public class Pattern2{
public static void halloTriangle(int n) {
	for(int i=1;i<=n;i++) {
		for(int j=1;j<=n;j++) {
		   System.out.print(" ");
		}
		for(int k=1;k<2*i-1;k++) {
			if(k==1 || i==n || k==2*i-1){
		}
		    else {
		    	System.out.print(" ");
		    }
		}
		System.out.println(" ");
	
     }
}

	public static void main(String[]args) {
		halloTriangle(6);
	}
	}