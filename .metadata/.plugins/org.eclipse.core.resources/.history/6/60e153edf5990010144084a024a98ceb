package loops;
																									

public class Hallow_Triangle{
public static void hallowTriangle(int n) {
	for(int i=i;i<=n;i++) {
		for(int j=1;j<=n;j++) {
		   System.out.print(" ");
		}
		for(int k=1;k<=(2*i-1);k++) {
			if(k==1 || i==n || k==(2*i-1)){
		}
			System.out.println(" ");
		}
		else 
		    
		    	System.out.print("*");
		    }
		}
		System.out.println(" ");
	
     }
}

	public static void main(String[]args) {
		hallowTriangle(6);
	}
	}